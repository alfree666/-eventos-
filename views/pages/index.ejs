<head>

<% include ../partials/header.ejs %>

  <style type="text/css">
  td.list {
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  max-width: 66px;}
  </style>
  
</head>

<div class="container">
  <div class="row">
    <div class="col-md-12">
      <a href="/event/add" class="btn btn-success btn-lg">Agregar nuevo evento</a>
      <br/><br/>
    </div>
    <div class="col-md-12">
      <% if(items.length > 0) { %>
        <table class="table table-hover">
          <tr>
            <th>ID</th>
            <th>Nombre</th>
            <th>Fecha</th>
            <th>Hora</th>
            <th>Localización</th>
            <th colspan="2">Acciones</th>
          </tr>
          <% items.forEach(function(item, index){ %>
            <tr>
              <td><%= item.e_id %></td>
              <td class="list"><%= item.e_name %></td>
              <td class="list"><%= item.e_start_date %></td>      
              <td class="list"><%= item.e_hour %></td>
              <td class="list" ><%= item.e_location %></td>
              <td>
                <a href="/event/edit/<%= item.e_id %>" class="btn btn-sm btn-warning"><i class="fa fa-pencil" aria-hidden="true"></i></a>
              </td>
              <td>
                <a href="/event/delete/<%= item.e_id %>" class="btn btn-sm btn-danger" onclick="return confirm('Estás seguro de querer eliminar este evento?')"><i class="fa fa-trash" aria-hidden="true"></i></a>
              </td>
            </tr>
          <% }) %>
        </table>
      <% }else{ %>
        <p><strong>No se encontró ningún evento.</strong></p>
      <% } %>
    </div>
  </div>
</div>

<% include ../partials/footer.ejs %>
